<!DOCTYPE html>
<html>
<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Admin</title>
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <link rel="shortcut icon" type="image/png" href="~/Areas/PivatePages/img/favicon.ico" />
    <link rel="stylesheet" href="~/Areas/PivatePages/Content/fontawesome/css/all.min.css">
    <link rel="stylesheet" href="~/Areas/PivatePages/Content/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Areas/PivatePages/Content/css/admin.css">


</head>
<body>
    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
        <div class="container">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <i class="fas fa-bars" style="color: #fff;"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item dropdown">
                        <a class="nav-link" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
                           aria-haspopup="true" aria-expanded="false">
                            <img src="~/Areas/PivatePages/img/admin-avt.jpg" alt="avatar" class="avatar-img">
                            Xin chào Admin
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="./admin-login.html">Đăng xuất</a>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- END NAVBAR -->

    <!-- MENU -->
    <div class="wrapper d-flex">
        <div class="sideMenu" onmouseover="PhongSide();" onmouseout="ThuSide();">
            <div class="sidebar">
                <div style="height: 30vh">
                </div>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a href="@Url.Action("Index","ThongKe")" class="nav-link sidebar-link isActive">
                            <i class="side-icon fas fa-chart-line"></i>
                            <span class="text">Thống kê</span>
                        </a>

                    </li>
                    <li class="nav-item">
                        <a href="javascript:hiensanpham();" class="nav-link sidebar-link">
                            <i class="side-icon fas fa-cubes"></i>
                            <span class="text">Món ăn</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="javascript:hiennguoidung();" class="nav-link sidebar-link">
                            <i class="side-icon fas fa-users"></i>
                            <span class="text">Người dùng</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="javascript:hiendonhang();" class="nav-link sidebar-link">
                            <i class="side-icon fas fa-file-invoice"></i>
                            <span class="text">Đơn hàng</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <!--END MENU-->

    @RenderBody()

    <!-- MODAL EDIT PRODUCT -->
    <div class="modal fade" id="chinhSua" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Thông tin món</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true" style="color: #696969 !important;">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="name-product">Tên món</label>
                            <input type="text" class="form-control" id="name-product">
                        </div>
                        <div class="form-group">
                            <label for="description-product">Mô tả món</label>
                            <input type="text" class="form-control" id="description-product">
                        </div>

                        <div class="form-group">
                            <label for="name-product">Giá gốc</label>
                            <input type="number" class="form-control" id="old-price-product">
                        </div>
                        <div class="form-group">
                            <label for="description-product">Giá giảm</label>
                            <input type="number" class="form-control" id="new-price-product">
                        </div>

                        <div class="form-group">
                            <label for="uploadImage">Chọn ảnh</label>
                            <input type="file" class="form-control-file" id="uploadImage">
                        </div>

                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                    <button type="button" class="btn btn-success" data-dismiss="modal">Lưu thay đổi</button>
                </div>
            </div>
        </div>
    </div>
    <!-- END MODAL EDIT PRODUCT -->
    <!-- JS-->
    <script src="~/Areas/PivatePages/Content/js/jquery-3.2.1.slim.min.js"></script>
    <script src="~/Areas/PivatePages/Content/js/popper.min.js"></script>
    <script src="~/Areas/PivatePages/Content/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Areas/PivatePages/Content/js/product-list.js"></script>
    <script src="~/Areas/PivatePages/Content/js/admin.js"></script>
    <!-- END JS  -->
</body>
</html>